<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="?android:colorBackground"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txvstatusTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:colorBackground"
        android:gravity="center_vertical"
        android:maxLength="25"
        android:paddingLeft="0dp"
        android:paddingTop="15dp"
        android:text="#Tittle"
        android:textColor="#1F1D1D"
        android:textSize="18sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/timeago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingLeft="0dp"
        android:paddingBottom="5dp"
        android:drawableTint="#607D8B"
        android:textStyle="bold"
        android:drawablePadding="2dp"
        android:drawableLeft="@drawable/ic_access_time_black_24dp"
        android:text="x min Ago"
        android:textColor="#607D8B"
        android:textSize="10sp" />
    <TextView
        android:id="@+id/txvstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:colorBackground"
        android:lineSpacingMultiplier="1.5"
        android:minHeight="125dp"
        android:paddingTop="10dp"
        android:paddingBottom="30dp"
        android:text="This is a Saple Text Status, You Can Share ,Save, And Share To Your Friends On Whatsapp"
        android:textColor="#312F2F"
        android:textSize="16sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp">

        <include
            layout="@layout/txt_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </include>

    </androidx.cardview.widget.CardView>
</LinearLayout>
